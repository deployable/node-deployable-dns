# http://editorconfig.org

# top-most EditorConfig file, as we could have one per folder
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

# JavaScript
[*.{js}]
indent_size = 2

[*.{es6}]
indent_size = 2


